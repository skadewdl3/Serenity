{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://api.cloudflare.com"
        },
        {
          "url": "https://api.dictionaryapi.dev"
        }
      ]
    },
    "dialog:default",
    "fs:default",
    "fs:allow-stat",
    "app-events:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DOCUMENT/**/*"
        },
        {
          "path": "$PICTURE/**/*"
        },
        {
          "path": "$DOWNLOAD/**/*"
        }
      ]
    }
  ]
}